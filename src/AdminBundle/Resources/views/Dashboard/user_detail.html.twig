{% extends 'AdminBundle:Dashboard:base.html.twig' %}

{% block body %}
    <div class="x_panel">
        <div class="x_title">
            <h2>{{ user.username }}</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-4">
                <div class="text-center cover"><img src="http://loremflickr.com/256/256" alt=""></div>
            </div>
            <div class="col-md-8">
                <table class="table table-striped table-responsive jambo_table">
                    <tr><td><strong>Username:</strong></td><td>{{ user.username }}</td></tr>
                    <tr><td><strong>Email:</strong></td><td>{{ user.email }}</td></tr>
                    <tr><td><strong>Banned:</strong></td><td>{{ user.locked ? 'Yes' : 'No' }}</td></tr>
                    <tr><td><strong>Activated:</strong></td><td> {{ user.enabled ? 'Yes' : 'No' }}</td></tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}